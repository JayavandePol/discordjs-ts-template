{
  "name": "advanced-discord-bot-template",
  "version": "1.0.0",
  "description": "Advanced Discord bot template with structured commands, event handling, and rich logging.",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "nodemon --watch src --ext ts --exec \"node --loader ts-node/esm src/index.ts\"",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "tsc --noEmit",
    "register:global": "node --loader ts-node/esm src/scripts/register-commands.ts --scope global",
    "register:guild": "node --loader ts-node/esm src/scripts/register-commands.ts --scope guild"
  },
  "dependencies": {
    "discord.js": "^14.15.2",
    "dotenv": "^16.4.5",
    "sequelize": "^6.37.3",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/node": "^22.4.0",
    "nodemon": "^3.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  }
}
